import './bootstrap';

import Alpine from 'alpinejs';

window.Alpine = Alpine;

Alpine.start();

// Splide carousel para testimonios
import Splide from '@splidejs/splide';
document.addEventListener('DOMContentLoaded', () => {
  new Splide('#testimonials', {
    type   : 'loop',
    perPage: 1,
    autoplay: true,
    pagination: false,
    arrows: false,
  }).mount();
});
